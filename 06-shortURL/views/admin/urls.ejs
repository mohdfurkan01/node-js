<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All URLs | Admin</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('../partials/header') %>

    <div class="container">
      <div class="admin-header">
        <h1><i class="fas fa-list"></i> All URLs</h1>
        <p>Total: <%= urls.length %> URLs</p>
      </div>

      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>#</th>
              <th>Short URL</th>
              <th>Original URL</th>
              <th>Created By</th>
              <th>Clicks</th>
              <th>Created</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td>
                <span class="short-url">
                  <!-- localhost:8082/ejs formate url.shortId -->
                  <%= `${process.env.BASE_URL}/${url.shortId}` %>
                </span>
              </td>
              <td class="redirect-url" title="<%= url.redirectURL %>">
                <%= url.redirectURL %>
              </td>
              <td>
                <%= url.createdBy ? url.createdBy.name || url.createdBy.email :
                'Unknown' %>
              </td>
              <td>
                <span
                  class="clicks <%= url.visitedHistory.length > 0 ? 'success' : 'low' %>"
                >
                  <%= url.visitedHistory.length %>
                </span>
              </td>
              <td><%= new Date(url.createdAt).toLocaleDateString() %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div style="margin-top: 2rem">
        <a href="/admin" class="btn">
          <i class="fas fa-arrow-left"></i> Back to Admin Panel
        </a>
      </div>
    </div>
  </body>
</html>
