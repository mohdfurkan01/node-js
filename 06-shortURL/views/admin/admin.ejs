<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel | URL Shortener</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('../partials/header') %>

    <div class="container">
      <div class="admin-header">
        <h1><i class="fas fa-shield-alt"></i> Admin Panel</h1>
        <p>Welcome, <%= user.name || user.email.split('@')[0] %></p>
      </div>

      <div class="admin-stats">
        <div class="stat-card">
          <i class="fas fa-users"></i>
          <h3>Total Users</h3>
          <p class="stat-number"><%= stats ? stats.totalUsers : 0 %></p>
        </div>
        <div class="stat-card">
          <i class="fas fa-link"></i>
          <h3>Total URLs</h3>
          <p class="stat-number"><%= stats ? stats.totalURLs : 0 %></p>
        </div>
        <div class="stat-card">
          <i class="fas fa-mouse-pointer"></i>
          <h3>Total Clicks</h3>
          <p class="stat-number"><%= stats ? stats.totalClicks : 0 %></p>
        </div>
      </div>

      <div class="admin-actions">
        <h2>Quick Actions</h2>
        <div class="action-buttons">
          <a href="/admin/users" class="btn admin-action-btn">
            <i class="fas fa-user-cog"></i> Manage Users
          </a>
          <a href="/admin/urls" class="btn admin-action-btn">
            <i class="fas fa-list"></i> View All URLs
          </a>
          <a href="/" class="btn admin-action-btn">
            <i class="fas fa-home"></i> Back to Home
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
