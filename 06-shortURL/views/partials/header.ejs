<header class="main-header">
  <nav class="navbar">
    <div class="nav-brand">
      <a href="/" class="logo"> <i class="fas fa-link"></i> URL Shortener </a>
    </div>

    <div class="nav-links">
      <% if (locals.user) { %>
      <!-- Logged In User -->
      <a href="/" class="nav-link"> <i class="fas fa-home"></i> Home </a>
      <a href="/url" class="nav-link">
        <i class="fas fa-plus-circle"></i> New URL
      </a>

      <% if (user.role === 'ADMIN') { %>
      <a href="/admin" class="nav-link admin-btn">
        <i class="fas fa-shield-alt"></i> Admin Panel
      </a>
      <% } %>

      <div class="user-dropdown">
        <button class="user-menu-btn">
          <i class="fas fa-user-circle"></i> <%= user.email.split('@')[0] %>
          <i class="fas fa-chevron-down"></i>
        </button>
        <div class="dropdown-content">
          <span class="user-role">
            <i class="fas fa-user-tag"></i> <%= user.role %>
          </span>
          <a href="/profile" class="dropdown-item">
            <i class="fas fa-user"></i> My Profile
          </a>
          <a href="/logout" class="dropdown-item logout-btn">
            <i class="fas fa-sign-out-alt"></i> Logout
          </a>
        </div>
      </div>
      <% } else { %>
      <!-- Guest User -->
      <a href="/" class="nav-link"> <i class="fas fa-home"></i> Home </a>
      <a href="/login" class="nav-link">
        <i class="fas fa-sign-in-alt"></i> Login
      </a>
      <a href="/signup" class="nav-link signup-btn">
        <i class="fas fa-user-plus"></i> Sign Up
      </a>
      <% } %>
    </div>
  </nav>
</header>
